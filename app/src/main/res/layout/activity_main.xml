<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
<TextView
    android:id="@+id/textResultView_id"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintHeight_percent="0.3"
    tools:text="20"
    android:textSize="70dp"
    android:gravity="center|end"
    />
    <LinearLayout
        android:layout_marginBottom="20dp"
        android:id="@+id/firstRow_Id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4"
        app:layout_constraintTop_toBottomOf="@+id/textResultView_id"
        app:layout_constraintStart_toStartOf="parent"
        >

        <Button
            android:id="@+id/button_7_id"
            style="@style/decimalButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:onClick="onButtonClick"
            android:text="7" />

        <Button
            style="@style/decimalButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"

            android:onClick="onButtonClick"
            android:text="8" />

        <Button
            style="@style/decimalButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"

            android:onClick="onButtonClick"
            android:text="9" />

        <Button
            style="@style/decimalButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="#788788"
            android:onClick="onOperatorClick"
            android:text="/" />


    </LinearLayout>
    <LinearLayout

        android:id="@+id/secondRow_Id"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4"
        app:layout_constraintTop_toBottomOf="@+id/firstRow_Id"
        app:layout_constraintStart_toStartOf="parent"
        >

        <Button
            style="@style/decimalButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:onClick="onButtonClick"
            android:text="4" />

        <Button
            style="@style/decimalButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:onClick="onButtonClick"
            android:text="5" />

        <Button
            style="@style/decimalButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:onClick="onButtonClick"
            android:text="6" />

        <Button
            style="@style/decimalButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="#788788"

            android:onClick="onOperatorClick"
            android:text="*" />


    </LinearLayout>
    <LinearLayout
        android:id="@+id/ThirdRow_Id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4"
        app:layout_constraintTop_toBottomOf="@+id/secondRow_Id"
        app:layout_constraintStart_toStartOf="parent"
        >

        <Button
            style="@style/decimalButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:onClick="onButtonClick"

            android:text="1" />

        <Button
            style="@style/decimalButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:onClick="onButtonClick"

            android:text="2" />

        <Button
            style="@style/decimalButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:onClick="onButtonClick"

            android:text="3" />

        <Button
            style="@style/decimalButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_margin="5dp"
            android:layout_weight="1"

            android:backgroundTint="#788788"
            android:onClick="onOperatorClick"
            android:text="-" />


    </LinearLayout>
    <LinearLayout

        android:id="@+id/fourthRow_Id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4"
        app:layout_constraintTop_toBottomOf="@+id/ThirdRow_Id"
        app:layout_constraintStart_toStartOf="parent"
        >

        <Button
            style="@style/decimalButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"

            android:onClick="onButtonClick"
            android:text="0" />

        <Button
            style="@style/decimalButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"


            android:layout_weight="1"
            android:onClick="onButtonClick"
            android:text="." />

        <Button
            style="@style/decimalButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"

            android:onClick="onEqualClick"
            android:text="=" />

        <Button
            style="@style/decimalButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"

            android:layout_weight="1"

            android:backgroundTint="#788788"
            android:onClick="onOperatorClick"
            android:text="+" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>